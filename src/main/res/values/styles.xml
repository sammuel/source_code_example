<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/background_blue_gray</item>
    </style>



    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">@color/background_blue_gray</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="UploadStatTableHeaderText" >

        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_settings_size</item>
    </style>

    <style name="UploadStatTableItemText" >

        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/text_settings_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="UploadStatTableRow">
        <item name="android:paddingLeft">@dimen/table_upload_stat_padding</item>
        <item name="android:paddingRight">@dimen/table_upload_stat_padding</item>
    </style>


</resources>
